<div class="card">
	<div class="card-block">
		<h4 class="card-title">{{this.title}}</h4>
		<p class="card-body">{{this.content}}</p>
		<p>
			<form method="POST" action="/reviews/comments/{{this._id}}?_method=DELETE">
				<button onclick="delete({{this._id}})" class="btn btn-primary delete-comment" data-comment-id="{{this._id}}">Delete</button>
			
			</form>
		</p>
	</div>

</div>
