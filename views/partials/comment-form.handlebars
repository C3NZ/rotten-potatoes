<form method="POST" action="#" id="newComment">
	<input type="hidden" value="{{review._id}}" name="reviewId">
	<fieldset>
		<legend>Add a comment</legend>
		<div class="form-group">
			<label for="comment-title">Title</label><br>
			<input required class="form-control" type="text" name="title" placeholder="title" id="comment-title">
		</div>
		<div class="form-group">
			<label for="comment-content">Description</label>
			<textarea required class="form-control" name="content" rows="10" placeholder="Your comment..." id="comment-content"></textarea>
		</div>
	</fieldset>

	<div class="form-group">
		<button class="btn btn-primary" type="submit">Save comment</button>
	</div>
</form>
